{{define "people-regist"}}
{{template "header" .}}
<!-- Begin page content -->
    <div class="container ">
        <div class="row hg-main-container">
          <div class="span3"></div>
          <div class="span6 well">
            <form id="regist_form" action="/regist" method="post">
              <fieldset>
                <legend><span class="hg-text-color">Hello Golang</span> 社区账号注册</legend>

                <label>用户名  <span class="hg-help-info"></span></label>
                <input type="text" name="name" id="name" size="20" class="btn-block hg-input-block error" placeholder="用户名可以为中文，最长10位字符">
                <!--<span class="help-block">Example block-level help text here. </span>
              placeholder="用户名可以为中文，最长10位字符"-->

                <label>邮箱 <span class="hg-help-info"></span> </label>
                <input type="text" name="email" id="email" size="20" class="btn-block hg-input-block" placeholder="请输入常用邮箱地址">
                

                <label>密码 <span class="hg-help-info"></span></label>
                <input type="password" name="password" id="password" size="20" class="btn-block hg-input-block" placeholder="密码为8-20位，仅可用英文和数字">
                <!--<span class="help-block">Example block-level help text here.</span>-->

                <label>重复密码 <span class="hg-help-info"></span></label>
                <input type="password" name="repassword" id="repassword" size="20" class="btn-block hg-input-block" placeholder="请重复密码">
                <!--<span class="help-block">Example block-level help text here.</span>-->

                <!--
                <label class="checkbox">
                  <input type="checkbox"> 我同意 服务条款
                </label>
                -->
				        <input type="submit" value="注册账号" class="btn" id="submit" name="submit" />
              </fieldset>
            </form>
          </div>
          <div class="span3"></div>
        </div>
    </div>

<!-- End -->
{{template "footer" .}}
{{end}}

