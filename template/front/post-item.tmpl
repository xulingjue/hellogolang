{{define "post-item"}}
{{template "header" .}}
<div id="contents">
<section id="main">
  <div id="leftcontainer">
    
    <h2 class="mainheading">{{ .post.Title}}</h2>
    <p class="postinfo" style="margin-bottom:20px;">{{ .post.CreateTime }} | <a href="#">{{ .post.Author.Name }}</a> | <a href="/post/?cat={{.post.Class.IdpostClass}}" target="{{.Idpost}}_window" title="浏览“{{ .post.Class.Name }}”下的文章" href="#">{{ .post.Class.Name }}</a></p>
    <article class="post">
      {{ .post.Content}}
    </article>


    <h3>{{ .post.ReplyNum }} 回复</h3>
    <ol class="commentlist">
      {{range .comments}}       
      <li class="comment" id="comment-430134" data-id="430134" data-depth="1">      
        <div class="comment-content clearfix">          
          <div class="comment-top clearfix">             
            <div class="comment-avatar vcard">                 
              <a href="#comment-430134"><img alt="" src="/assets/image/default.png" class="avatar avatar-30 photo" height="30" width="30"></a>             
            </div>             
            <div class="comment-author">{{ .Author.Name}}</div>             
            <div class="comment-date">{{ .CreateTime}}</div>             
          </div>          
          <div id="comment-body-430134" class="comment-body">             
            <p>{{ .Content}}</p>
            <div class="comment-meta commentmetadata clearfix"></div>
          </div>     
        </div>      
      </li> 
      {{end}}
    </ol>

    <comment>
      <form action="/post/comment/" method="post" id="comment-form" class="form">
         <p class="input-error">

         </p>
         <p class="text-area">
            <textarea name="content" class="required"></textarea>
         </p>
         <p> 
            <input name="postId" type="hidden" class="ignore" value="{{.post.Idpost}}" />
            <input name="submit" id="submit" class="submit-btn" type="submit" value="发表评论" disable="disable" />
         </p>
         <div id="summary"></div>
         <div class="clear"></div>
      </form>
    </comment>

    {{template "page" .}} 
  </div>
</section>

{{template "sidebar" .}}  

<div class="clear"></div>
</div>

{{template "footer" .}}
{{end}}